<properties>
    
    <entry key="GET_ALL_REGORDS">
        SELECT * FROM employee_details
    </entry>
    
    <entry key="GET_PARTICULAR_RECORD">
        SELECT * FROM employee_details WHERE empid=?
    </entry>
    
    <entry key="ADD_RECORDS">
        INSERT INTO employee_details(empid, name, age, gender, salary, location, status) VALUES(?,?,?,?,?,?,?)
    </entry>
    
    <entry key="UPDATE_RECORD">
        UPDATE employee_details SET name=?, age=?, gender=?, salary=?, location=? WHERE empid=?
    </entry>
    
    <entry key="DELETE_RECORD">
        UPDATE employee_details SET status='D' WHERE empid=?
    </entry>
    
</properties>
